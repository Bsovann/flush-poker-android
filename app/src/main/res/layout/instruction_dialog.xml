<?xml version="1.0" encoding="utf-8"?>
<!-- Darrien Kramer -->
<!-- Instruction dialog here -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="350dp"
    android:background="@drawable/custom_border_background"
    android:layout_centerInParent="true"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to Play"
            android:fontFamily="@font/belgrano"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textAppearance="@style/buttonTextStyle"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/belgrano"
                    android:text="Starting the Round"
                    android:textAppearance="@style/headingText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/rules_rounds"
                    android:textAppearance="@style/generalText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/belgrano"
                    android:text="Poker Hands"
                    android:textAppearance="@style/headingText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/hands"
                    android:textAppearance="@style/generalText" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/closeInstructionButton"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_border_background"
            android:layout_gravity="center"
            android:text="@string/closeText" />
    </LinearLayout>
</RelativeLayout>
